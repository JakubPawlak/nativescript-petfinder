{
    "files.exclude": {
        "**.*.js": {
            "when": "$(basename).ts"
        },
        "**.*.css": {
            "when": "$(basename).scss"
        }
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.trimAutoWhitespace": true,
    "editor.formatOnPaste": true,
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/hooks": true,
        "platforms/**": true
    },
    "tslint.autoFixOnSave": true,
}
